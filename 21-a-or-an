public String aOrAn(String word) {

    Set<String> vowels = new Set<String>{'a','e','i','o','u'};
    for (String vow : vowels){
        if(word.startsWith(vow)){
            return ('an ' + word);    
        }else{
            return ('a' + word)
        }
    }
/*
    if(word.startsWith('a') || word.startsWith('e') || word.startsWith('i')
    || word.startsWith('o') || word.startsWith('u')){
        return ('an ' + word);
    }else{
        return ('a '+ word);
    }*/
}